{
  "name": "account",
  "version": "0.0.1",
  "description": "The DKA Core Account Services",
  "author": {
    "name": "YovanggaAnandhika",
    "email": "dka.tech.dev@gmail.com",
    "url": "https://github.com/DKA-Typescript-Microservices/DKA-Typescript-GRPC-Services-Core-Account.git"
  },
  "main": "dist/main.js",
  "private": true,
  "license": "MIT",
  "scripts": {
    "proto": "protoc --plugin=\"protoc-gen-ts=$(which protoc-gen-ts)\" --ts_proto_opt=rpc=true,binary=true,metadata=true,addGrpcMetadata=true,snakeToCamel=false --proto_path=src/model/proto --ts_proto_out=src/model/proto $(find src/model/proto -name \"*.proto\")",
    "prebuild": "yarn run proto",
    "build": "nest build",
    "obfuscator": "javascript-obfuscator dist --output dist --config javascript-obfuscator.json",
    "postbuild": "yarn run obfuscator",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "seed": "node dist/seeder/main.seeder.js",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:stream": "ts-node test/testStream.ts",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json"
  },
  "dependencies": {
    "@nestjs/common": "11.0.16",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.0.13",
    "@nestjs/mapped-types": "*",
    "@nestjs/microservices": "^11.0.13",
    "@nestjs/mongoose": "^11.0.3",
    "@protobuf-ts/grpc-transport": "^2.9.6",
    "argon2": "^0.41.1",
    "javascript-obfuscator": "^4.1.1",
    "jose": "^6.0.10",
    "moment": "^2.30.1",
    "moment-timezone": "^0.5.48",
    "mongoose": "^8.13.2",
    "nestjs-grpc-reflection": "^0.2.2",
    "reflect-metadata": "^0.2.0",
    "rxjs": "^7.8.1",
    "ts-proto": "^2.7.0",
    "uuid": "^11.0.5"
  },
  "devDependencies": {
    "@dkaframework/security": "^1.2.7",
    "@faker-js/faker": "^9.5.0",
    "@fastify/cors": "^11.0.1",
    "@grpc/grpc-js": "^1.13.2",
    "@grpc/proto-loader": "^0.7.13",
    "@grpc/reflection": "^1.0.4",
    "@nestjs/cli": "^11.0.6",
    "@nestjs/platform-fastify": "^11.1.0",
    "@nestjs/schematics": "^11.0.4",
    "@nestjs/testing": "^11.0.13",
    "@sentry/nestjs": "^9.16.1",
    "@types/jest": "^29.5.2",
    "@types/node": "^22.14.0",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^8.29.1",
    "@typescript-eslint/parser": "^8.29.1",
    "eslint": "^9.24.0",
    "eslint-config-prettier": "^10.1.1",
    "eslint-plugin-prettier": "^5.2.6",
    "fastify": "^5.3.2",
    "jest": "^29.5.0",
    "nestjs-seeder": "^0.3.2",
    "prettier": "^3.0.0",
    "protoc-gen-ts": "^0.8.7",
    "source-map-support": "^0.5.21",
    "supertest": "^7.1.0",
    "ts-jest": "^29.3.1",
    "ts-loader": "^9.4.3",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.8.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
